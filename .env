# Environment variables for naebak-gateway

# إعدادات الخادم
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8013
DEBUG_MODE=True

# إعدادات الأمان
SECRET_KEY=super-secret-gateway-key-naebak-2024
JWT_SECRET_KEY=jwt-secret-key-for-naebak-platform

# إعدادات CORS
CORS_ORIGINS=*

# إعدادات Rate Limiting
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_AUTH=200/hour
RATE_LIMIT_PUBLIC=50/hour

# إعدادات التوجيه
DEFAULT_TIMEOUT=30
RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# عناوين الخدمات المصغرة (للتطوير المحلي)
AUTH_SERVICE_URL=http://localhost:8001
ADMIN_SERVICE_URL=http://localhost:8002
COMPLAINTS_SERVICE_URL=http://localhost:8003
MESSAGING_SERVICE_URL=http://localhost:8004
RATINGS_SERVICE_URL=http://localhost:8005
VISITOR_SERVICE_URL=http://localhost:8006
NEWS_SERVICE_URL=http://localhost:8007
NOTIFICATIONS_SERVICE_URL=http://localhost:8008
BANNER_SERVICE_URL=http://localhost:8009
CONTENT_SERVICE_URL=http://localhost:8010
STATISTICS_SERVICE_URL=http://localhost:8012
THEME_SERVICE_URL=http://localhost:8014

# قاعدة البيانات
DATABASE_URL=sqlite:///gateway.db

# Redis للتزامن
REDIS_URL=redis://localhost:6379

# إعدادات Webhook
WEBHOOK_SECRET=webhook-secret-key-naebak
SYNC_INTERVAL=300

# إعدادات التخزين المؤقت
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
